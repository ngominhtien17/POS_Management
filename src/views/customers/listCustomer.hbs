<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách khách hàng</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox1">
                                    <label for="checkbox1" class="mb-0"></label>
                                </div>
                            </th>
                            <th>Họ tên</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Tổng số đơn</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        {{#each customers}}
                        <tr>
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox{{@index}}">
                                    <label for="checkbox{{@index}}" class="mb-0"></label>
                                </div>
                            </td>
                            <td>{{this.name}}</td>
                            <td>{{this.phone}}</td>
                            <td>{{this.address}}</td>
                            <td>{{this.orderCount}}</td>
                            <td>
                                <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="Xem"
                                        href="/customer/viewCustomerWithOrders/{{_id}}"><i class="ri-eye-line mr-0"></i></a>
                                    {{!-- <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Sửa"
                                        href="/customers/edit/{{this._id}}"><i class="ri-pencil-line mr-0"></i></a> --}}
                                    {{!-- <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Xóa"
                                        href="/customers/delete/{{this._id}}"><i class="ri-delete-bin-line mr-0"></i></a> --}}
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>