<div class="container-fluid"></div>
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Thông tin khách hàng</h4>
                    <p>Tên: {{customer.name}}</p>
                    <p>Số điện thoại: {{customer.phone}}</p>
                    <p>Địa chỉ: {{customer.address}}</p>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Hóa đơn</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th>Ngày</th>
                            <th>Khách hàng</th>
                            <th>Tổng</th>
                            <th>Đã thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Nhân viên</th>
                            <th>Thừa</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        {{#each orders}}
                        <tr>
                            <td>{{formatDate orderDate}}</td>
                            <td>{{customer.name}}</td>
                            <td>{{totalPrice}}</td>
                            <td>{{payment.receive}}</td>
                            <td>
                                <div class="badge {{statusBadge status}}">{{status}}</div>
                            </td>
                            <td>{{employee.fullName}}</td>
                            <td>{{payment.remain}}</td>
                            <td>
                                <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="View"
                                        href="/order/orderDetail/{{_id}}"><i class="ri-eye-line mr-0"></i></a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary" onclick="window.history.back()">Trở về</button>
                </div>
            </div>
        </div>
    </div>
</div>