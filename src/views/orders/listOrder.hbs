<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Hóa đơn</h4>
                </div>
                <a href="/transaction/addTransaction" class="btn btn-primary add-list"><i class="las la-plus mr-3"></i>Tạo hóa đơn</a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox1">
                                    <label for="checkbox1" class="mb-0"></label>
                                </div>
                            </th>
                            <th>Ngày</th>
                            <th>Khách hàng</th>
                            <th>Tổng</th>
                            <th>Đã thanh toán</th>
                            <th>Trạng thái</th>
                            <th>Nhân viên</th>
                            <th>Thừa</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        {{#each orders}}
                        <tr>
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox{{@index}}">
                                    <label for="checkbox{{@index}}" class="mb-0"></label>
                                </div>
                            </td>
                            <td>{{formatDate orderDate}}</td>
                            <td>{{customer.name}}</td>
                            <td>{{totalPrice}}</td>
                            <td>{{payment.receive}}</td>
                            <td>
                                <div class="badge {{statusBadge status}}">{{status}}</div>
                            </td>
                            <td>{{employee.fullName}}</td>
                            <td>{{payment.remain}}</td>
                            <td>
                                <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="View"
                                        href="/order/orderDetail/{{_id}}"><i class="ri-eye-line mr-0"></i></a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>