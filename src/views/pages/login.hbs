<div class="wrapper">
   <section class="login-content">
      <div class="container">
         <div class="row align-items-center justify-content-center height-self-center">
            <div class="col-lg-8">
               <div class="card auth-card">
                  <div class="card-body p-0">
                     <div class="d-flex align-items-center auth-content">
                        <div class="col-lg-7 align-self-center">
                           <div class="p-3">
                              <h2 class="mb-2">Đăng nhập</h2>
                              <p>Đăng nhập để tiếp tục sử dụng dịch vụ.</p>
                              {{#if error}}
                              <div class="alert alert-danger">{{error}}</div>
                              {{/if}}
                              <form method="post" action="/login">
                                 <div class="row">
                                    <div class="col-lg-12">
                                       <div class="floating-label form-group">
                                          <input class="floating-input form-control" type="text" name="username"
                                             placeholder=" ">
                                          <label>Username</label>
                                       </div>
                                    </div>
                                    <div class="col-lg-12">
                                       <div class="floating-label form-group" style="position: relative;">
                                          <input id="password" class="floating-input form-control" type="password" name="password" placeholder=" ">
                                          <label>Mật khẩu</label>
                                          <button type="button" onclick="togglePassword()" id="togglePasswordIcon" class="btn btn-link" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">
                                             <i class="fa fa-eye"></i>
                                          </button>
                                       </div>
                                    </div>
                                 </div>
                                 <button type="submit" class="btn btn-primary">Đăng nhập</button>
                              </form>
                           </div>
                        </div>
                        <div class="col-lg-5 content-right">
                           <img src="../assets/images/login/01.png" class="img-fluid image-right" alt="">
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </section>
</div>

<script>
   const togglePassword = () => {
      var passwordField = document.getElementById("password")
      var toggleIcon = document.getElementById("togglePasswordIcon").querySelector('i')
      if (passwordField.type === "password") {
         passwordField.type = "text"
         toggleIcon.classList.remove("fa-eye")
         toggleIcon.classList.add("fa-eye-slash")
      } else {
         passwordField.type = "password"
         toggleIcon.classList.remove("fa-eye-slash")
         toggleIcon.classList.add("fa-eye")
      }
   }
</script>
