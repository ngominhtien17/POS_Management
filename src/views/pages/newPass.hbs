<div class="wrapper">
   <section class="login-content">
      <div class="container">
         <div class="row align-items-center justify-content-center height-self-center">
            <div class="col-lg-8">
               <div class="card auth-card">
                  <div class="card-body p-0">
                     <div class="d-flex align-items-center auth-content">
                        <div class="col-lg-7 align-self-center">
                           <div class="p-3">
                              <h2 class="mb-2">Đổi mật khẩu</h2>
                              <p>Đổi mật khẩu để tiếp tục sử dụng dịch vụ.</p>
                              <form action="/employee/update-password" method="post">
                                 <div class="row">
                                    <div class="col-lg-12">
                                       <div class="floating-label form-group">
                                          <input id="newPassword" class="floating-input form-control" type="password" name="newPassword" placeholder=" ">
                                          <label>Mật khẩu</label>
                                          <button type="button" onclick="togglePassword('newPassword', this)" class="btn btn-link"
                                             style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">
                                             <i class="fa fa-eye"></i>
                                          </button>
                                       </div>
                                    </div>
                                    <div class="col-lg-12">
                                       <div class="floating-label form-group">
                                          <input id="confirmPassword" class="floating-input form-control" type="password" name="confirmPassword" placeholder=" ">
                                          <label>Xác nhận mật khẩu</label>
                                          <button type="button" onclick="togglePassword('confirmPassword', this)" class="btn btn-link"
                                             style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);">
                                             <i class="fa fa-eye"></i>
                                          </button>
                                       </div>
                                    </div>
                                 </div>
                                 <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
                              </form>
                              {{#if error}}
                              <div class="alert alert-danger mt-3">{{error}}</div>
                              {{/if}}
                           </div>
                        </div>
                        <div class="col-lg-5 content-right">
                           <img src="../assets/images/login/01.png" class="img-fluid image-right" alt="">
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </section>
</div>

<script>
   const togglePassword = (fieldId, button) => {
      var passwordField = document.getElementById(fieldId)
      var toggleIcon = button.querySelector('i')
      if (passwordField.type === "password") {
         passwordField.type = "text"
         toggleIcon.classList.remove("fa-eye")
         toggleIcon.classList.add("fa-eye-slash")
      } else {
         passwordField.type = "password"
         toggleIcon.classList.remove("fa-eye-slash")
         toggleIcon.classList.add("fa-eye")
      }
   }
</script>
