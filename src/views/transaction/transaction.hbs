<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách giao dịch thanh toán</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class="data-tables table mb-0 tbl-server-info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data">
                            <th>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox1">
                                    <label for="checkbox1" class="mb-0"></label>
                                </div>
                            </th>
                            <th>Ngày thanh toán</th>
                            <th>Số tiền nhận</th>
                            <th>Số tiền còn lại</th>
                            <th>Mã đơn hàng</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        {{#if transactions.length}}
                        {{#each transactions}}
                        <tr>
                            <td>
                                <div class="checkbox d-inline-block">
                                    <input type="checkbox" class="checkbox-input" id="checkbox{{@index}}">
                                    <label for="checkbox{{@index}}" class="mb-0"></label>
                                </div>
                            </td>
                            <td>{{this.paymentDate}}</td>
                            <td>{{this.receive}}</td>
                            <td>{{this.remain}}</td>
                            <td>{{this.orderId}}</td>
                            <td>
                                <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="Xem"
                                        href="/transaction/viewTransaction/{{this._id}}"><i class="ri-eye-line mr-0"></i></a>
                                    <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa"
                                        href="/transaction/edit/{{this._id}}"><i class="ri-pencil-line mr-0"></i></a>
                                    <a class="badge bg-danger mr-2" data-toggle="tooltip" data-placement="top" title="Xóa"
                                        href="/transaction/delete/{{this._id}}"><i class="ri-delete-bin-line mr-0"></i></a>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                        {{else}}
                        <tr><td colspan="6">Không có giao dịch nào.</td></tr>
                        {{/if}}
                        console.log(transactions);

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
